{
  "name": "@repo/cluster",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build && npm run dev:watch",
    "dev:watch": "concurrently \"rollup --config rollup.config.ts --configPlugin rollup-plugin-esbuild --watch\" \"nodemon -w dist/index.js dist/index.js\"",
    "build": "rollup --config rollup.config.ts --configPlugin rollup-plugin-esbuild",
    "start": "npm run build && CLUSTER_TYPE=node node dist/index.js",
    "check": "tsc --noEmit"
  },
  "exports": {
    ".": "./src/export.ts"
  },
  "dependencies": {
    "@fastify/multipart": "^8.3.0",
    "@repo/api": "*",
    "@repo/app-config": "*",
    "@repo/filesystem": "*",
    "@repo/hashcat": "*",
    "@repo/plugins": "*",
    "@repo/typescript-config": "*",
    "@trpc/server": "^10.45.2",
    "aws-sdk": "^2.1553.0",
    "fastify": "^4.0.0",
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "rollup": "^4.17.2",
    "rollup-plugin-esbuild": "^6.1.1"
  }
}
