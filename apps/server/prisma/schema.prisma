// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  ID          Int       @id @default(autoincrement())
  username    String    @unique
  password    String
  permissions String    @default("")
  projects    Project[] @relation("members")
  hashes      Hash[]    @relation("userHashes")
}

model Project {
  PID     Int    @id @default(autoincrement())
  name    String @unique
  members User[] @relation("members")
  hashes  Hash[] @relation("projectHashes")
}

model Hash {
  HID       Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation("userHashes", fields: [userId], references: [ID])
  projectId Int?
  project   Project? @relation("projectHashes", fields: [projectId], references: [PID])
  hash      String
  hashType  String
  cracked   String?
}
