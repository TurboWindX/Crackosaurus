model User {
  ID            String    @id @default(uuid())
  username      String    @unique
  password      String
  permissions   String    @default("")
  projects      Project[]
  submittedJobs Job[]     @relation("JobSubmittedBy")
  approvedJobs  Job[]     @relation("JobApprovedBy")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
}

model Project {
  PID       String   @id @default(uuid())
  name      String
  members   User[]
  hashes    Hash[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Hash {
  HID       String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [PID])
  jobs      Job[]
  hash      String
  hashType  Int
  status    String   @default("NOT_FOUND")
  value     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Wordlist {
  WID       String   @id @default(uuid())
  name      String?
  size      BigInt
  checksum  String
  jobs      Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Instance {
  IID       String   @id @default(uuid())
  name      String?
  tag       String
  type      String?
  jobs      Job[]
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Job {
  JID        String    @id @default(uuid())
  instanceId String?
  instance   Instance? @relation(fields: [instanceId], references: [IID])
  wordlistId String?
  wordlist   Wordlist? @relation(fields: [wordlistId], references: [WID])
  ruleId     String?
  rule       Rule?     @relation(fields: [ruleId], references: [RID])
  hashes     Hash[]
  status     String    @default("PENDING")
  approvalStatus String @default("PENDING")
  instanceType String?
  submittedById String?
  submittedBy User? @relation("JobSubmittedBy", fields: [submittedById], references: [ID])
  approvedById String?
  approvedBy User? @relation("JobApprovedBy", fields: [approvedById], references: [ID])
  approvedAt DateTime?
  rejectionNote String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
}

model Rule {
  RID       String   @id @default(uuid())
  name      String?
  size      BigInt
  checksum  String
  jobs      Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
