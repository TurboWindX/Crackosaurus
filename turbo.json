{
  "tasks": {
    "typecheck": {
      "cache": false,
      "passThroughEnv": ["CI"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["BACKEND_HOST", "BACKEND_PORT"]
    },
    "@repo/server#build": {
      "dependsOn": ["typecheck", "^build"],
      "env": ["BACKEND_HOST", "BACKEND_PORT"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    }
  }
}
