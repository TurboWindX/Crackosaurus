{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["BACKEND_HOST", "BACKEND_PORT"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "dev": {
      "cache": false
    },
    "start": {},
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    }
  }
}
