{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "dev": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    }
  }
}
