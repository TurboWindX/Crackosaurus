FROM docker.io/node:20-alpine AS base

RUN apk update
RUN npm install -g turbo

WORKDIR /app

FROM base AS builder

COPY . .

RUN turbo prune @repo/instance --docker

FROM base AS installer

COPY --from=builder /app/out/json .
COPY --from=builder /app/out/package-lock.json ./package-lock.json

RUN npm install

COPY --from=builder /app/out/full .

RUN NODE_ENV=production turbo run build --filter=instance

FROM base AS runner

RUN echo "https://dl-cdn.alpinelinux.org/alpine/edge/testing/" >> /etc/apk/repositories
RUN apk update
RUN apk add hashcat

RUN addgroup --system --gid 1001 instance
RUN adduser --system --uid 1001 instance

RUN chown -R instance:instance /app

USER instance

COPY --from=installer --chown=instance:instance /app/node_modules/ ./node_modules/
COPY --from=installer --chown=instance:instance /app/apps/instance/dist .

CMD ["node", "index.js"]
