FROM docker.io/node:20-alpine AS base

RUN apk update
RUN apk add openssl
RUN npm install -g turbo

WORKDIR /app

FROM base AS builder

COPY . .

RUN turbo prune @repo/db --docker

FROM base AS installer

COPY --from=builder /app/out/json .
COPY --from=builder /app/out/package-lock.json ./package-lock.json

RUN npm install

COPY --from=builder /app/out/full .

RUN NODE_ENV=production turbo run build --filter=@repo/db

ARG DATABASE_PROVIDER=postgresql
ENV DATABASE_PROVIDER=$DATABASE_PROVIDER

# Generate Prisma client into the top-level /app node_modules so the runner can copy it simply.
WORKDIR /app/apps/db
# Run the schema generator from apps/db so its relative paths (schemas/...) resolve.
RUN DATABASE_PROVIDER=$DATABASE_PROVIDER node dist/schema.js

WORKDIR /app
# Install @prisma/client at top-level and generate the client from /app so output lands in /app/node_modules
RUN npm install @prisma/client && \
    DATABASE_PATH="postgresql://localhost:5432/placeholder?schema=public" \
        npx prisma generate --schema=apps/db/providers/${DATABASE_PROVIDER}/schema.prisma

FROM base AS runner

RUN npm install -g prisma

COPY --from=installer /app/node_modules/ ./node_modules/
COPY --from=installer /app/apps/db /app/apps/db

WORKDIR /app/apps/db

ARG DATABASE_PROVIDER
ENV DATABASE_PROVIDER=$DATABASE_PROVIDER

CMD ["node", "dist/deploy.js"]
